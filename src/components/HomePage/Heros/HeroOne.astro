---
import Button from "../../Button.astro";
import Review from "../Testimonials/ReviewTwo.astro";

const siteData = Astro.props.siteData || (typeof window !== 'undefined' ? window.siteData : null);

if (!siteData) {
  throw new Error('siteData is required for HeroOneAstro component');
}

const { business, ui_sections, cities } = siteData;

const { hero } = ui_sections;

// Get current city (default to 'louannec' for now, fallback if cities not available)
const currentCity = cities?.default || 'louannec';
const cityData = cities?.available?.[currentCity] || {
  hero_title: "Buscail Habitat Couverture à Louannec",
  hero_description: "Expert en couverture, isolation et rénovation à Louannec. Nous garantissons des travaux de qualité pour protéger votre habitat durablement."
};
---
<div class="">

  <main>
    <div class="relative ">
      <svg aria-hidden="true" class="absolute inset-x-0 top-0 -z-10 h-256 w-full mask-[radial-gradient(32rem_32rem_at_center,white,transparent)] stroke-gray-200">
        <defs>
          <pattern id="1f932ae7-37de-4c0a-a8b0-a6e3b4d44b84" width="200" height="200" x="50%" y="-1" patternUnits="userSpaceOnUse">
            <path d="M.5 200V.5H200" fill="none" />
          </pattern>
        </defs>
        <svg x="50%" y="-1" class="overflow-visible fill-gray-50">
          <path d="M-200 0h201v201h-201Z M600 0h201v201h-201Z M-400 600h201v201h-201Z M200 800h201v201h-201Z" stroke-width="0" />
        </svg>
        <rect width="100%" height="100%" fill="url(#1f932ae7-37de-4c0a-a8b0-a6e3b4d44b84)" stroke-width="0" />
      </svg>
      <div aria-hidden="true" class="absolute top-0 right-0 left-1/2 -z-10 -ml-24 transform-gpu overflow-hidden blur-3xl lg:ml-24 xl:ml-48">
        <div style="clip-path: polygon(63.1% 29.5%, 100% 17.1%, 76.6% 3%, 48.4% 0%, 44.6% 4.7%, 54.5% 25.3%, 59.8% 49%, 55.2% 57.8%, 44.4% 57.2%, 27.8% 47.9%, 35.1% 81.5%, 0% 97.7%, 39.2% 100%, 35.2% 81.4%, 97.2% 52.8%, 63.1% 29.5%)" class="aspect-801/1036 w-200.25 bg-linear-to-tr from-primary to-primary/70 opacity-30"></div>
      </div>
      <div class="overflow-hidden">
        <div class="max-w-7xl mx-auto px-6 pt-22 pb-32 sm:pt-60 lg:px-8 lg:pt-32">
          <div class=" gap-x-14 lg:mx-0 lg:flex lg:max-w-none lg:items-center lg:justify-between">
            <div class="relative w-full lg:max-w-xl lg:shrink-0 xl:max-w-2xl">
              <div class="block">
                  <Review/>
                  <Button href="" icon="alert" variant="secondary">Actuellement disponible</Button>
              </div>

              <h1 class="text-primary uppercase font-medium text-sm mt-10 mb-2">{cityData.hero_title}</h1>
              <h2 class="text-5xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-7xl">{hero.subtitle}</h2>
              <p class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:max-w-md sm:text-xl/8 lg:max-w-none">{cityData.hero_description}</p>
              <div class="mt-10 flex flex-wrap items-center gap-x-6 mb-10">
               <Button href="" class="w-full md:w-fit" size="lg" icon="phone">Nous appeler</Button>
                <Button variant="secondary" class="w-full md:w-fit" modal modalType="center" icon="devis" size="lg">Devis en Ligne</Button>                
              </div>
            </div>
            <div class="mt-14 flex justify-end gap-8 sm:-mt-44 sm:justify-start sm:pl-20 lg:mt-0 lg:pl-0">
              <div class="ml-auto w-60 flex-none space-y-8 pt-32 sm:ml-0 sm:pt-80 lg:order-last lg:pt-36 xl:order-0 xl:pt-80">
                <div class="relative">
                  <img src={hero.images[0]} alt="" class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg" />
                  <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"></div>
                </div>
              </div>
              <div class="mr-auto w-60 flex-none space-y-8 sm:mr-0 sm:pt-52 lg:pt-36">
                <div class="relative">
                  <img src={hero.images[1]} alt="" class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg" />
                  <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"></div>
                </div>
                <div class="relative">
                  <img src={hero.images[2]} alt="" class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg" />
                  <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"></div>
                </div>
              </div>
              <div class="w-60 flex-none space-y-8 pt-32 sm:pt-0">
                <div class="relative">
                  <img src={hero.images[3]} alt="" class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg" />
                  <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"></div>
                </div>
                <div class="relative">
                  <img src={hero.images[4]} alt="" class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg" />
                  <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
