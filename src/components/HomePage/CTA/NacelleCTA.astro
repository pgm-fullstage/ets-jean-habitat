---
import Button from '../../Button.astro';

interface Props {
  siteData: any;
}

const { siteData } = Astro.props;
const { business, ui_sections } = siteData;
const { theme, nacelle_cta } = ui_sections;
---

<div class="overflow-hidden bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2">
      <div class="lg:pt-4 lg:pr-8">
        <div class="lg:max-w-lg">
          <h2 class="text-base/7 font-semibold text-primary">{nacelle_cta.section_title}</h2>
          <p class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-title sm:text-5xl">{nacelle_cta.main_title}</p>
          <p class="mt-6 text-lg/8 text-content">{nacelle_cta.description}</p>
          <div class="mt-8 flex flex-wrap gap-2">
            <Button 
              modal
              modalType="center"
              siteData={siteData}
              variant="primary"
              size="lg"
              radius="lg"
              icon="devis"
              iconPosition="left"
            >
              {nacelle_cta.cta_primary.text}
            </Button>
            <Button 
              href={`tel:${business.contact.phone}`}
              siteData={siteData}
              variant="outline"
              size="lg"
              radius="lg"
              icon="phone"
              iconPosition="left"
            >
              {nacelle_cta.cta_secondary.text}
            </Button>
          </div>
        </div>
      </div>
      <img width="2432" height="1442" src={nacelle_cta.image} alt={nacelle_cta.image_alt} class="aspect-square w-full max-w-none rounded-xl shadow-xl ring-1 ring-gray-400/10 object-cover md:-ml-4 lg:-ml-0" />
    </div>
  </div>
</div>