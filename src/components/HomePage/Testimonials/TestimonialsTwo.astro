---
const siteData = Astro.props.siteData || (typeof window !== 'undefined' ? window.siteData : null);

if (!siteData) {
  throw new Error('siteData is required for TestimonialsTwo component');
}

const { business, ui_sections } = siteData;
const { theme } = ui_sections;

// Section header data
const testimonials = {
  section: {
    title: "Témoignages Clients",
    main_title: "Ce que disent nos clients",
    description: `Découvrez les retours de nos ${business.google_rating.total_reviews} clients satisfaits avec une note moyenne de ${business.google_rating.average_rating}/5 étoiles.`
  }
};

// Mock testimonials data pour l'exemple
const testimonialsList = [
  {
    name: "Marie Dupont",
    date: "15 Mars 2024",
    text: "Entreprise sérieuse et professionnelle, je recommande vivement leurs services d'élagage.",
    rating: 5
  },
  {
    name: "Pierre Martin", 
    date: "8 Mars 2024",
    text: "Je vous le conseille fortement, du très bon travail et à bon prix. Équipe très professionnelle.",
    rating: 5
  },
  {
    name: "Sophie Bernard",
    date: "2 Mars 2024", 
    text: "Très content du passage de l'équipe qui a remis mes arbres à neuf. Service impeccable ! L'intervention a été menée avec professionnalisme et respect des délais.",
    rating: 5
  },
  {
    name: "Jean Moreau",
    date: "28 Février 2024",
    text: "Intervention rapide et efficace pour l'abattage d'un arbre dangereux. Merci !",
    rating: 5
  },
  {
    name: "Catherine Leroy",
    date: "22 Février 2024",
    text: "Excellent travail de taille de haies, très soigné et dans les temps. Je recommande cette équipe pour leur sérieux et leur expertise.",
    rating: 5
  },
  {
    name: "Michel Rousseau",
    date: "18 Février 2024", 
    text: "Équipe compétente pour l'entretien de mon jardin. Résultat parfait !",
    rating: 5
  },
  {
    name: "Anne Dubois",
    date: "12 Février 2024",
    text: "Service de qualité pour l'élagage de nos arbres fruitiers. Travail soigné et conseils avisés. Nous referons appel à leurs services.",
    rating: 5
  },
  {
    name: "François Lopez",
    date: "5 Février 2024",
    text: "Intervention d'urgence suite à une tempête. Réactivité exemplaire !",
    rating: 5
  },
  {
    name: "Sylvie Girard",
    date: "28 Janvier 2024",
    text: "Très satisfaite de la pose de notre clôture en aluminium. Installation parfaite et équipe professionnelle.",
    rating: 5
  }
];
---

<div class="overflow-hidden bg-white py-16 sm:py-20">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <!-- En-tête de section -->
    <div class="mx-auto max-w-2xl text-center mb-16">
      <h2 class="font-semibold text-base uppercase tracking-widest mb-3 animate-on-scroll fade-in-up" style={`color: ${theme.primary}`}>
        {testimonials.section.title}
      </h2>
      <h3 class="text-3xl font-bold tracking-tight text-title sm:text-4xl mb-6 animate-on-scroll fade-in-up" data-delay="100">
        {testimonials.section.main_title}
      </h3>
      <p class="text-lg leading-8 animate-on-scroll fade-in-up" style={`color: ${theme.text}`} data-delay="200">
        {testimonials.section.description}
      </p>
    </div>

    <!-- Badge Google Reviews -->
    <div class="flex justify-center mb-12">
      <div class="flex items-center gap-3 bg-white rounded-xl shadow-lg px-6 py-4 border border-gray-100">
        <!-- Google Logo -->
        <div class="flex-shrink-0">
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
        </div>

        <!-- Excellent Badge -->
        <div class="text-center">
          <div class="text-lg font-bold text-gray-900">EXCELLENT</div>
          <div class="flex items-center justify-center gap-1">
            {[1, 2, 3, 4, 5].map(() => (
              <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            ))}
          </div>
          <div class="text-sm text-gray-600">
            Évaluations clients
          </div>
        </div>

        <!-- Google text -->
        <div class="text-2xl font-normal text-gray-600">Google</div>
      </div>
    </div>

    <!-- Testimonials Masonry Grid - Swipeable on mobile -->
    <div class="testimonials-container">
      <!-- Mobile: horizontal scroll with offset to show next card -->
      <div class="md:hidden flex gap-6 overflow-x-auto snap-x snap-mandatory pb-4 pl-6 pr-16">
        {testimonialsList.map((testimonial, index) => (
          <div class="testimonial-card bg-white rounded-lg shadow-md border border-gray-100 p-6 flex-shrink-0 w-72 snap-center" data-delay={300 + (index * 100)}>
            <!-- Header with avatar and info -->
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 rounded-full bg-primary/5 flex items-center justify-center">
                <span class="text-lg font-semibold" style={`color: ${theme.primary}`}>
                  {testimonial.name.split(' ').map(n => n[0]).join('')}
                </span>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900">{testimonial.name}</h4>
                <p class="text-sm text-gray-500">{testimonial.date}</p>
              </div>
              <!-- Google icon -->
              <div class="ml-auto">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                  <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                  <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                  <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                </svg>
              </div>
            </div>

            <!-- Stars -->
            <div class="flex items-center gap-1 mb-3">
              {[1, 2, 3, 4, 5].map(() => (
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              ))}
            </div>

            <!-- Testimonial text -->
            <p class="text-gray-600 leading-relaxed">
              {testimonial.text}
            </p>
          </div>
        ))}
      </div>

      <!-- Desktop: masonry grid -->
      <div class="hidden md:block masonry-grid">
        {testimonialsList.map((testimonial, index) => (
          <div class="testimonial-card bg-white rounded-lg shadow-md border border-gray-100 p-6 mb-6 break-inside-avoid animate-on-scroll fade-in-up" data-delay={300 + (index * 100)}>
            <!-- Header with avatar and info -->
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 rounded-full bg-primary/5 flex items-center justify-center">
                <span class="text-lg font-semibold" style={`color: ${theme.primary}`}>
                  {testimonial.name.split(' ').map(n => n[0]).join('')}
                </span>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900">{testimonial.name}</h4>
                <p class="text-sm text-gray-500">{testimonial.date}</p>
              </div>
              <!-- Google icon -->
              <div class="ml-auto">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                  <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                  <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                  <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                </svg>
              </div>
            </div>

            <!-- Stars -->
            <div class="flex items-center gap-1 mb-3">
              {[1, 2, 3, 4, 5].map(() => (
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              ))}
            </div>

            <!-- Testimonial text -->
            <p class="text-gray-600 leading-relaxed">
              {testimonial.text}
            </p>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  .testimonials-container {
    -webkit-overflow-scrolling: touch;
  }
  
  /* Hide scrollbar for mobile swipe */
  .testimonials-container > div::-webkit-scrollbar {
    display: none;
  }
  
  .testimonials-container > div {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  /* Masonry grid for desktop */
  .masonry-grid {
    columns: 3;
    column-gap: 2rem;
    column-fill: balance;
  }

  @media (max-width: 1024px) {
    .masonry-grid {
      columns: 2;
    }
  }

  .testimonial-card {
    page-break-inside: avoid;
    break-inside: avoid;
  }
</style>