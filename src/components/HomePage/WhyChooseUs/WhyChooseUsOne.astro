---
const siteData = Astro.props.siteData || (typeof window !== 'undefined' ? window.siteData : null);

if (!siteData) {
  throw new Error('siteData is required for WhyChooseUsOne component');
}

const { business } = siteData;

// Récupération des points de valeur depuis le JSON
const valuePoints = business.why_choose_us || [];

// Fonction pour obtenir l'icône SVG
function getIcon(iconName) {
  const icons = {
    expert: `<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
    speed: `<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
    price: `<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`
  };
  return icons[iconName] || icons.expert;
}
---

<section class="bg-gray-50 py-16 sm:py-20">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <!-- En-tête avec badge Google -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-x-3 rounded-full bg-white px-6 py-3 shadow-sm ring-1 ring-gray-100 animate-on-scroll fade-in-up">
        <!-- Logo Google -->
        <svg width="20" height="20" viewBox="0 0 24 24" class="flex-shrink-0">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        
        <!-- Étoiles -->
        <div class="flex items-center gap-x-1">
          {Array.from({length: 5}).map(() => (
            <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          ))}
        </div>
        
        <span class="text-sm font-semibold text-gray-900">100% de clients satisfaits</span>
      </div>
    </div>

    <!-- Grille des points de valeur -->
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      {valuePoints.map((point, index) => (
        <div class={`bg-white rounded-2xl p-8 shadow-sm ring-1 ring-gray-100 text-center animate-on-scroll fade-in-up`} data-delay={(index * 100 + 200).toString()}>
          <!-- Icône -->
          <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-primary/5 border border-primary/20 mb-6">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-8 w-8 text-primary">
              <Fragment set:html={getIcon(point.icon)} />
            </svg>
          </div>
          
          <!-- Titre -->
          <h3 class="text-xl font-semibold text-gray-900 mb-4">
            {point.title}
          </h3>
          
          <!-- Description -->
          <p class="text-gray-600 leading-relaxed">
            {point.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>